/*nav*/
.ff_nav{
	position: relative;
	background:#fff;
}
.line_nav{
	height:30px;line-height:30px;
	padding:3px 0;
	display:-webkit-flex;
    display:flex;
    overflow:hidden;
	width:98%;  
}
.scroll-view_nav view{
    width:auto;
}
.line_nav .category{
	-webkit-flex:initial;
    flex:initial;
    padding:0 10px;
    text-align:center;
	font-size:14px; color:#666;	
}
.line_nav a{
	font-size:14px; color:#666;	
}
.line_nav .current{
	color:#4b943c;
	border-bottom:2px solid #4b943c;
	margin-bottom:-2px;
}